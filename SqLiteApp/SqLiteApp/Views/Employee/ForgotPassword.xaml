<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqLiteApp.ForgotPassword">
    <StackLayout MinimumHeightRequest="100" MinimumWidthRequest="300" Grid.Column="0" >



        <Label Text="Forgot your Password" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="100" TextColor="#1ea593" FontSize="Large"/>
        <Label Text="Enter your Enterprise Id and we will send your request to the back end" HeightRequest="100" TextColor="Black" FontSize="Small"/>
        <Entry x:Name="Username_forgot"  Placeholder="Username"   
                           PlaceholderColor="Gray" HeightRequest="40" IsPassword="True" TextColor="Black"/>
        <Button Text="Send Request" TextColor="Black" FontSize="Small" Clicked="Send_Clicked"/>


    </StackLayout>
</ContentPage>